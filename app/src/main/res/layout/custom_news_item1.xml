<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgNews"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/image_news"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/imgNews"
                android:layout_margin="10dp"
                android:id="@+id/txtTitle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/imgNews"
                android:gravity="right"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_below="@+id/txtTitle"
                android:id="@+id/txtDesc" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#b6b6b6"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/background_action_selector"
                android:clickable="true"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/ic_share_colored" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/background_action_selector"
                android:clickable="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_like_colored" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/background_action_selector"
                android:clickable="true"
                android:src="@mipmap/ic_favorite_colored"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>